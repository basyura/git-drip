#!/usr/bin/env ruby

require 'fileutils'

if ARGV.length == 0
  puts <<-EOF
    usage:
      git-drip outdir
  EOF
  exit
end

dist = ARGV[0]

`git status -s`.each_line do |line|
  src = line.chomp!.sub(/^.../,'')
  FileUtils.mkdir_p(File.join(dist, File.dirname(src)))
  FileUtils.cp(src , File.join(dist, src))
  puts src
end
